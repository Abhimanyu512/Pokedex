<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the Pokedex</h1>
            <p>The best place to view all the coolest pokemons</p>
            <p>
                <a class="btn btn-primary btn-large" href="/index/new">Add a new pokemon</a>
            </p>
        </div>    
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% pokemon.forEach(function(pokemon){ %>
            <div col-md-3 col-sm-6>
                <div class="img-thumbnail">
                    <img src="<%= pokemon.image %>">
                    <div class="caption">
                        <h4><%= pokemon.name %></h4>
                    </div>
                    <p>
                        <a href="/index/<%= pokemon._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>